<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cetiti.dataX.dao.DataPropertiesDao">
    <select id="DataPropertiesList" resultType="DataProperties">
      SELECT sql_id,sql_name,sql_type,driver,url,user_name,pass_word FROM data_properties
    </select>

    <select id="getDataProperties" resultType="DataProperties">
      SELECT sql_id,sql_name,sql_type,driver,url,user_name,pass_word FROM data_properties WHERE sql_id = #{sqlId}
    </select>

    <insert id="insertDataProperties" keyProperty="sqlId" useGeneratedKeys="true" parameterType="DataProperties">
        INSERT INTO data_properties (sql_name,sql_type,driver,url,user_name,pass_word)
        VALUES (#{sqlType},#{sqlName},#{driver},#{url},#{userName},#{passWord})
    </insert>

    <update id="updateDataProperties" parameterType="DataProperties">
        UPDATE data_properties
        <set>
            <if test="sqlType != null">
                sql_type = #{sqlType},
            </if>
            <if test="sql_name != null">
                sql_name = #{sqlName},
            </if>
            <if test="driver != null">
                driver = #{driver},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="passWord != null">
                pass_word = #{passWord},
            </if>
        </set>
        WHERE sql_id = #{sqlId}
    </update>

    <delete id="deleteDataProperties" parameterType="java.lang.Integer">
        DELETE FROM data_properties
        WHERE sql_id = #{sqlId}
    </delete>
</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cetiti.dataX.dao.DataPropertiesDao">
    <select id="DataPropertiesList" resultType="DataProperties">
      SELECT data_id,sql_type,data_center,driver,url,user_name,pass_word from DATA_PROPERTIES
    </select>

    <select id="getDataProperties" resultType="DataProperties">
        SELECT data_id,sql_type,data_center,driver,url,user_name,pass_word from DATA_PROPERTIES WHERE  data_id = #{dataId}
    </select>

    <insert id="insertDataProperties" parameterType="DataProperties">
        INSERT INTO DATA_PROPERTIES (sql_type,data_center,driver,url,user_name,pass_word)
        VALUES (#{sqlType},#{dataCenter},#{driver},#{url},#{userName},#{passWord})
    </insert>

    <update id="updateDataProperties" parameterType="DataProperties">
        UPDATE DATA_PROPERTIES
        <set>
            <if test="sqlType != null">
                sql_type = #{sqlType},
            </if>
            <if test="dataCenter != null">
                data_center = #{dataCenter},
            </if>
            <if test="driver != null">
                driver = #{driver},
            </if>
            <if test="url != null">
                url = #{url},
            </if>
            <if test="userName != null">
                user_name = #{userName},
            </if>
            <if test="passWord != null">
                pass_word = #{passWord},
            </if>
        </set>
        WHERE data_id = #{dataId}
    </update>

    <delete id="deleteDataProperties" parameterType="java.lang.Long">
        DELETE FROM DATA_PROPERTIES
        WHERE data_id = #{dataId}
    </delete>
</mapper>
